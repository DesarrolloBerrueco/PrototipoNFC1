<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:baselineAligned="true"
                app:srcCompat="@drawable/controlaforo" />

            <TextView
                android:id="@+id/tv_hint_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:baselineAligned="false"
                android:text="Acerque la tarjeta al dispositivo para fichar la entrada / salida."
                android:textSize="16sp" />

            <!--TODO simple radioGroup impl-->
            <!--<RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rb_entrada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrada"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rb_salida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salida"/>
            </RadioGroup>-->

            <!--Cool radioGroup impl ;)-->
            <LinearLayout
                android:id="@+id/ll_switch_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_shape_stroke_rounded_accent"
                    android:checkedButton="@+id/rb_entrada"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_entrada"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Entrada"
                        android:textAllCaps="true"
                        android:textColor="@drawable/switch_text_color" />

                    <RadioButton
                        android:id="@+id/rb_salida"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Salida"
                        android:textAllCaps="true"
                        android:textColor="@drawable/switch_text_color" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/et_nfc_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_simulate_nfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simular NFC"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                style="@style/default_btn"/>

            <TextView
                android:id="@+id/tv_last_log_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:text="Ãšltimo Fichaje"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_last_log_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ENTRADA -> 12345678Z"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_hint_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:baselineAligned="false"
                android:text="En caso de que sea la primera vez que se usa la tarjeta NFC, debe picar la tarjeta y asociarle un DNI para crear el usuario."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:text="Dni:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_create_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Usuario"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                style="@style/default_btn"/>



            <!--TODO deprecated views-->
            <EditText
                android:id="@+id/fechaEntradaText"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:inputType="phone"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/fechaSalidaText"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:inputType="phone"
                android:visibility="gone"/>

            <Button
                android:id="@+id/recordButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="@string/btn_write_tag"
                android:textColor="#FFFFFF"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:visibility="gone" />

            <Button
                android:id="@+id/readButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="@string/btn_read_tag"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
